{
  "name": "fine_tuning",
  "num_epochs": 90,
  "pretrained_checkpoint": "",
  "loss": {
    "name": "CrossEntropyLoss"
  },
  "dataset": {
    "num_workers": 40,
    "train": {
      "name": "image_path",
      "split": "train",
      "batchsize_per_replica": 2,
      "num_samples": null,
      "use_shuffle": false,
      "roor": "./data",
      "transforms": [
        {
          "name": "apply_transform_to_key",
          "transforms": [
            {
              "name": "RandomResizedCrop",
              "size": 224
            },
            {
              "name": "RandomHorizontalFlip"
            },
            {
              "name": "ToTensor"
            },
            {
              "name": "Normalize",
              "mean": [
                0.485,
                0.456,
                0.406
              ],
              "std": [
                0.229,
                0.224,
                0.225
              ]
            }
          ],
          "key": "input"
        }
      ],
      "image_folder": "./data/train",
      "image_files": null
    },
    "test": {
      "name": "image_path",
      "split": "test",
      "batchsize_per_replica": 2,
      "num_samples": null,
      "use_shuffle": false,
      "root": "./data",
      "transforms": [
        {
          "name": "apply_transform_to_key",
          "transforms": [
            {
              "name": "Resize",
              "size": 256
            },
            {
              "name": "CenterCrop",
              "size": 224
            },
            {
              "name": "ToTensor"
            },
            {
              "name": "Normalize",
              "mean": [
                0.485,
                0.456,
                0.406
              ],
              "std": [
                0.229,
                0.224,
                0.225
              ]
            }
          ],
          "key": "input"
        }
      ],
      "image_folder": "./data/test",
      "image_files": null
    }
  },
  "reset_heads": false,
  "freeze_trunk": false,
  "meters": {
    "accuracy": {
      "topk": [
        1,
        5
      ]
    }
  },
  "optimizer": {
    "name": "sgd",
    "param_schedulers": {
      "lr": {
        "name": "composite",
        "schedulers": [
          {
            "name": "linear",
            "start_value": 0.1,
            "end_value": 0.4
          },
          {
            "name": "multistep",
            "values": [
              0.4,
              0.04,
              0.004,
              0.0004
            ],
            "milestones": [
              30,
              60,
              80
            ]
          }
        ],
        "update_interval": "epoch",
        "interval_scaling": [
          "rescaled",
          "fixed"
        ],
        "lengths": [
          0.0555,
          0.9445
        ]
      }
    },
    "weight_decay": 1e-4,
    "momentum": 0.9
  }
}
